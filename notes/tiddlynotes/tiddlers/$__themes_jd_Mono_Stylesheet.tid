.tc-topbar.tc-topbar-right {
    display: none; pointer-events: none;
}

.tc-dropzone > p,
.tc-topbar p,
.tc-sidebar-lists-template > p,
.tc-topbar .tc-sidebar-lists > p { margin: 0; }

