import { graphql } from "gatsby";

export const references = graphql`
  fragment GatsbyGardenReferences on Mdx {
    outboundReferences {
      ... on Mdx {
        body
        frontmatter {
          aliases
        }
        parent {
          id
          ... on RoamBlock {
            uid
            string
            fields {
              parentPage {
                title
              }
              slug
            }
          }
          ... on RoamPage {
            title
            fields {
              slug
            }
          }
          ... on File {
            fields {
              slug
              title
            }
          }
        }
      }
    }
    inboundReferences {
      ... on Mdx {
        body
        parent {
          id
          ... on RoamBlock {
            string
            fields {
              parentPage {
                title
                fields {
                  slug
                }
              }
              slug
            }
          }
          ... on RoamPage {
            title
            fields {
              slug
            }
          }
          ... on File {
            fields {
              slug
              title
            }
          }
        }
      }
    }
  }
`;
