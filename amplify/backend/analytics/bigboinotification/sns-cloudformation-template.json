{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "SimpleNotificaitonService resource stack creation using Amplify CLI",
    "Parameters": {
        "env": {
            "Type":  "String"
        },
        "snsTopic": {
            "Type": "String"
        },
        "authPolicyName": {
            "Type": "String"
        },
        "unauthPolicyName": {
            "Type": "String"
        },
        "authRoleName": {
            "Type":  "String"
        },
        "unauthRoleName": {
            "Type":  "String"
        }
    },
    "Conditions": {
        "ShouldNotCreateEnvResources": {
            "Fn::Equals": [
                { "Ref": "env" },
                "NONE"
            ]
        }
    },
    "Resources": {
        "SimpleNotificationServiceTopic": {
            "Type": "AWS::SNS::Topic",
            "Properties": {
                "DisplayName": {
                    "Fn::Join": [
                        "-",
                        [
                          { "Ref": "snsTopic" },
                          { "Ref": "env"}
                        ]
                    ]
                },
                "ContentBasedDeduplication": true,
                "FifoTopic": true,
                "TopicName": {
                    "Fn::Join": [
                        ".",
                        [
                            { "Ref": "snsTopic" },
                            { "Ref": "env" },
                            "fifo"
                        ]
                    ]
                }
            }
        },
        "CognitoUnauthPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": {"Ref": "unauthPolicyName" },
                "Roles": [ 
                    {"Ref": "unauthRoleName" }
                ],
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [{
                        "Effect": "Allow",
                        "Action": [
                            "sns:Subscribe"
                        ],
                        "Resource": {
                            "Fn::GetAtt": ["SimpleNotificationServiceTopic", "Arn"]
                        }
                    }]
                }
            }
        },
        "CognitoAuthPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": {"Ref": "authPolicyName" },
                "Roles": [ 
                    {"Ref": "authRoleName" }
                ],
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [{
                        "Effect": "Allow",
                        "Action": [
                            "sns:*"
                        ],
                        "Resource": {
                            "Fn::GetAtt": ["SimpleNotificationServiceTopic", "Arn"]
                        }
                    }]
                }
            }
        }
    },
    "Outputs": {
        "snsTopicArn": {
            "Value": {"Fn::GetAtt": ["SimpleNotificationServiceTopic", "Arn"] }
        }
    }
}
